source 'https://rubygems.org'

gem 'active_support'
gem 'adsf'
gem 'awesome_print'
gem 'better_errors'                 # Better Errors replaces the standard Rails error page with a much better and more useful error page. It is also usable outside of Rails in any Rack app as Rack middleware.
gem 'brakeman'                      # statically analyzes Rails application code to find security issues at any stage of development.
gem 'bullet'                        # The Bullet gem is designed to help you increase your application's performance by reducing the number of queries it makes. 
gem 'cane'                          # Fails your build if code quality thresholds are not met.
gem 'cane-hashcheck'                # enforces Ruby 1.9 hash syntax in your Ruby project using cane
gem 'database_cleaner'              # Database Cleaner is a set of strategies for cleaning your database in Ruby.
gem 'excellent'                     # Source Code analysis gem for Ruby and Rails 
gem 'gem-open'                      # Open gems on your favorite editor by running a specific gem command like `gem open nokogiri'
gem 'guard-rspec'                   # Guard for rspec
gem 'high_voltage'                  # Rails engine for static pages.
gem 'jquery-rails'                  # Jquery support for Rails
gem 'kramdown'                      # All ruby markdown parser. Some improvements over std Markdown
gem 'pg'                            # Rauks support of postrgres
gem 'pry'                           # Better alternative to irb
gem 'pry-debugger'                  # Debugging commands for pry
gem 'pry-doc'                       # Yard and extended documentation for pry
gem 'pry-rails'                     # Use Pry as your rails console
gem 'pry-stack_explorer'            # Examine stack at breakpoints
gem 'rack-timeout'                  # Abort requests that are taking too long; a subclass of Rack::Timeout::Error is raised.
gem 'rspec'                         # Famous TDD package
gem 'rspec-expectations'            # Exepectations for RSpec
gem 'rspec-mocks'                   # Mocks for RSpec
gem 'rspec-rails'                   # Rails support for RSpec
gem 'rubytree'                      # Nice, simple, tree datastructure
gem 'shoulda-matchers'              # Collection of testing matchers extracted from Shoulda
gem 'simple_form'                   # Forms made easy!
gem 'simplecov'                     # Cool code coverage analysis using Ruby 1.9 new stuff
gem 'will_paginate'                 # Classic page pagination for Rails
